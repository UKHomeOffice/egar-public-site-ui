{% block content %}
	<p class="govuk-body-l">
		<span style='background-color: #f7d352'>
		{{HOMEPAGE_MESSAGE | safe}}
		</span>
	</p>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-xl">{{__('title')}}</h1>

			<p class="govuk-body-l">{{__('welcome_caption')}}</p>

			<ul class="govuk-list govuk-list--bullet">
