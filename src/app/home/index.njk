                    <td class="govuk-table__cell ">{{ gar.departurePort }} </td>
                    <td class="govuk-table__cell ">{{ gar.arrivalPort }} </td>
                    <td class="govuk-table__cell ">{{ gar.garId }} </td>
                </tr>
            {% endfor %}
