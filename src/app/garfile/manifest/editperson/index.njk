{% extends "base-template.njk" %}

{% import "common/templates/includes/macros.njk" as m %}

{% block pageTitle %}
	Create GAR | Add person
{% endblock %}

{% block header %}
{% include "header-user.njk" %}
{% endblock %}

{% block beforeContent %}

  {% include "phase.njk" %}
  <a href="/garfile/manifest" class="govuk-back-link">Back</a>

{% endblock %}

{% block content %}

  {% import "common/templates/includes/macros.njk" as m %}

  {% if errors %}
    {% include "common/templates/includes/errors.njk" %}
  {% endif %}
  <div class="govuk-grid-row">
	  <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl">{{__('section_count', 4, 8)}}</span>

      <h1 class="govuk-heading-xl">{{__('title_manifest_edit_person_details')}}</h1>{# Person details #}
      <p class="govuk-body-m">{{_('caption_manifest_person_details')}}</p>

      <form action="/garfile/manifest/editperson" autocomplete="off" class="form-group" method="post" role="form" >
        <input type="hidden" id="garPeopleId" name="garPeopleId" value="{{person.garPeopleId}}" />
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        {% include "person-details.njk" %}
        <br>
        <input id="add-person-manifest" class="govuk-button" type="submit" value="Save and add to GAR" onclick="sendAnalytics(event, 'Save and Exit', 'click')">
        <p class="govuk-body-m">
          <a href="/garfile/manifest">{{ __('form_exit_without_saving') }}</a>
        </p>
      </form>
    </div>
  </div>
</div>
{% endblock %}
