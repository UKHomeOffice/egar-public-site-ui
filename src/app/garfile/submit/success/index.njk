{% extends "base-template.njk" %}

{% import "common/templates/includes/macros.njk" as m %}

{% block pageTitle %}
	Submit GAR | Success
{% endblock %}

{% block header %}
{% include "header-user.njk" %}
{% endblock %}

{% block beforeContent %}

  {% include "phase.njk" %}
  {% include "common/templates/includes/back.njk" %}

{% endblock %}

{% block content %}


  {% import "common/templates/includes/macros.njk" as m %}

  {% if errors %}
    {% include "common/templates/includes/errors.njk" %}
  {% endif %}

  <div class="govuk-grid-row">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
          GAR submitted
        </h1>
        <div class="govuk-panel__body">
          Your reference number is
        <br><strong>{{cookie.getGarId()}}</strong>
        </div>
      </div>

       <p class="govuk-body-m">
         We have sent a confirmation email to {{cookie.getUserEmail()}}
       </p>

       <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">{{__('assistive_warning')}}</span> 
          New: when the craft departs, you need to let Border Force know if anyone in the GAR did not not travel with it.<br />
          This can be done from the <a href="/home">Manage GAR</a> page in the 'Departure' tab.
        </strong>
      </div>

       <h2 class="govuk-heading-m">
         What happens next
       </h2>

       <p class="govuk-body-m">
         We've sent your GAR to Border Force.
       </p>

       <p class="govuk-body-m">
         If you need to make any changes to this GAR you will need to submit another GAR
         with the new information and cancel this one. This can be done on the <a href="/home">Manage GAR</a> page.
       </p>
       <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
     </div>

 {% endblock %}
