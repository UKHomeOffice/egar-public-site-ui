{% extends "base-template.njk" %}

{% import "common/templates/includes/macros.njk" as m %}

{% block pageTitle %}
	GAR | Register success
{% endblock %}

{% block header %}
{% include "header-pre-user.njk" %}
{% endblock %}

{% block beforeContent %}

  {% include "phase.njk" %}

{% endblock %}

{% block content %}


  {% import "common/templates/includes/macros.njk" as m %}

  {% if errors %}
    {% include "common/templates/includes/errors.njk" %}
  {% endif %}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-two-thirds">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">Submit a GAR account successfully created</h1>
      </div>
      <h2 class="govuk-heading-m">What happens next</h2>
      <p class="govuk-body-m">
        Click the verification link inside the email. This link will remain valid for 12 hours.
      If you can't see the email, please check any spam folders or <a href="/user/regmsg?resend=true">resend the email.</a>
      </p>
      <a class="govuk-button" href="/login" role="button">Sign In</a>

    </div>
  </div>
  <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
{% endblock %}
