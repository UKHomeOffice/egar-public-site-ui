{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}


<div style="width: 60%;">
{{ govukPanel({titleHtml: "Account has been <br/> created"}) }}
</div>



<p>We have sent you a confirmation email</p>

<h1>What happens next</h1>

<p>You can now use the service</p>

<p><a href="#" class="govuk-link">What did you think of this service?</a> (Takes 30 seconds)</p>

<form method="post" action="/onelogin/register" novalidate>
<input type="hidden" name="_csrf" value="{{ csrfToken }}" />
{{ govukButton({text: "Continue", element: "button", type: "submit"}) }}
</form>
