    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    window['ga-disable-UA-{{ ga_id }}'] = false;
    ga('create', '{{ ga_id }}', 'auto');
    ga('send', 'pageview');

    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ ga_id }}');

    console.log(getCookie('_ga'));
  }

  else{
    // Disable GA if not allowed
    window['ga-disable-UA-{{ ga_id }}'] = true;
    console.log("GA disabled");

    //check if GA cookie is set and if so then delete
  }
}

loadAnalytics();


</script>
