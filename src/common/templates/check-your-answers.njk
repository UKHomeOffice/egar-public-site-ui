{% macro sectionHeading(id, label, link, showChangeLinks, __) %}
  <h2 class="govuk-heading-m">{{ __(label) }}</h2>
  {% if showChangeLinks %}
    <p>
      <a href="{{ link }}" id="{{ id }}-change" class="govuk-link">
        {{ __('change_prefix') }}
        <span class="govuk-visually-hidden">{{ label }}</span>
      </a>
    </p>
  {% endif %}
{% endmacro %}

